div#createGroupModal.modal(name="createGroupModal",tabindex="-1",role="dialog",aria-labelledby="createGroupModalLabel",aria-hidden="true")
  div.modal-dialog
    div.modal-content
      div.modal-header
        button.close(type="button",data-dismiss="modal")
          span(aria-hidden="true")
          span.sr-only="Close"
        h4#createGroupModal.modal-title="Create Group"
      div.modal-body
        form(role="form",name="form",novalidate)
          div.form-group
            label(for="productLink")="Flipkart Product Link"
            input#productLink.form-control(type="uri",placeholder="Flipkart Product Link",ng-model="object.product_link",name="productLink",required)
      div.modal-footer
        button#createGroup.btn.btn-primary(type="button",data-loading-text="Fetching Info",ng-disabled="form.productLink.$error.required===true",ng-click="createGroup()")="Create"
section(ng-init="init()")
  div.container-fluid.bgGray(style="padding:10px;")
    div.row
      div.col-md-12
        div.col-md-2
          a(ng-click="dashboard()")
            img.img-responsive.text-center(src="images/innerPageLogo.png",width="160px;")
        div.col-md-8
          div.input-group
            input.heroInput.form-control(type="text",placeholder="Search for product")
            span.input-group-btn
              button.heroBTN.btn.btn-default(type="button")
                img(src="images/search.png",width="18px;")
        div.col-md-2.pull-right
          .btn.pinkBTN(ng-show="sessionKey",data-toggle="modal",data-target="#createGroupModal")="Create Group"
          a.btn.pinkBTN(ng-hide="sessionKey",ng-click="$root.goToLogin()")="Login To Buy"
div.container
  div.row
    div.col-lg-4(style="margin-top:25px;")
      div.sideImagewrapp(style="height:400px;")
        div.bigPink100pBtn(ng-show="sessionKey && group !== undefined && group.is_joined",style="z-index:1000;")="You are part of this group"
        a.bigPink100pBtn(ng-hide="sessionKey",style="z-index:1000;")="Login to show interest"
        a.bigPink100pBtn(ng-show="sessionKey && group !== undefined && !group.is_joined",style="z-index:1000;")="I am interested"
        div(style="width:100%;")
          img.image-center(src="{{group.product.product_image}}",style="max-height:300px;max-width:300px;")
      div.col-md-12(style="margin-top:10px;")
        div.col-md-4.pull-left
          div.fb-share-button(data-href="?utm_source=fb_share_landing_page&utm_medium=website&utm_campaign=share",data-layout="button_count")
        div.col-md-4.text-center
          a.twitter-share-button(href="https://twitter.com/share",data-size="medium",data-text="{{shareText}}",data-url= "http://www.lemonades.in/#/group/{{groupId}}?utm_source=tw_share_landing_page&utm_medium=website&utm_campaign=share")="Tweet"
        div.col-md-4.text-center
          a.g-plus(data-action="share",data-annotation="bubble",data-height="24",data-href="http://www.lemonades.in/#!/?utm_source=gplus_landing_page&utm_medium=website&utm_campaign=share")
    div.col-lg-8
      div.row
        div.col-md-12.marginTop25px
          h2="{{group.product.name}}"
      hr
      div.row
        div.col-md-12.marginTop5px
      div.row
        div.col-md-12
          div.priceBox
            p(style="font-size=25px;")="Online Price"
              a(href="{{group.product.product_link}}",target="_blank")=" (Flipkart)"
            h3="Rs. {{group.product.price_value}}"
      div.row
        div.col-md-12
          div.interestedBox
            h1="{{group.interested_users_count}}"
            p(ng-show="group.interested_users_count === 1",style="font-size:20px;")="User has joined this group"
            p(ng-show="group.interested_users_count > 1",style="font-size:20px;")="Users have joined this group"
          div.interestedBox
            h1(ng-show="group.interested_users_count < 50")="{{50-group.interested_users_count}}"
            p(style="font-size:20px;")="More are required to offer a deal."

      div.row(style="margin-top:15px;")
        div.col-md-12
          hr
          h2="Discussions"
      div.row(style="margin-left:1px;")
        div.fb-comments(data-href="http://www.lemonades.in/#/group/{{groupId}}?utm_source=fb_comments&utm_medium=website&utm_campaign=comments",data-numposts="5",data-colorscheme="light",style="width:100%;")
