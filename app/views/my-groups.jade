div#createGroupModal.modal(name="createGroupModal",tabindex="-1",role="dialog",aria-labelledby="createGroupModalLabel",aria-hidden="true")
  div.modal-dialog
    div.modal-content
      div.modal-header
        button.close(type="button",data-dismiss="modal")
          span(aria-hidden="true")
          span.sr-only="Close"
        h4#createGroupModal.modal-title="Create Group"
      div.modal-body
        div(ng-show="status !== undefined && status.success === false",style="margin-bottom:10px;")
          p.colorPink="{{status.message}}"
        form(role="form",name="form",novalidate)
          div.form-group
            label(for="productLink")="Flipkart Product Link"
            input#productLink.form-control(type="uri",placeholder="Flipkart Product Link",ng-model="object.product_link",name="productLink",required)
      div.modal-footer
        button#createGroup.btn.btn-primary-border(type="button",data-loading-text="Fetching Info",ng-disabled="form.productLink.$error.required===true",ng-click="createGroup()")="Create"
section(ng-init="init()",style="margin-top:80px;")
section(ng-show="createdGroups.length == 0 && joinedGroups.length == 0 && !fetchingGroups")
  div.container(style="margin-top:30px;")
    div.row
      div.col-md-6
        p.colorDarkGray.rightPinkLine(style="font-size:30px;")="Nothing much to show here"
section(ng-show="createdGroups.length > 0")
  div.container(style="margin-top:30px;")
    div.row
      div.col-md-6
        p.colorDarkGray.rightPinkLine(style="font-size:30px;")="Created By You"
    div.row
      group(ng-repeat="group in createdGroups",group=group)
    div.row(style="margin-top:30px;")
      div.col-md-12.text-center
        a.btn.btn-primary-border(ng-show="pageNo > -1",ng-click="getCreatedGroups()")="Load more"
section(ng-show="joinedGroups.length > 0")
  hr
  div.container(style="margin-top:30px;")
    div.row
      div.col-md-6
        p.colorDarkGray.rightPinkLine(style="font-size:30px;")="Joined By You"
    div.row
      group(ng-repeat="group in joinedGroups",group=group)
    div.row(style="margin-top:30px;")
      div.col-md-12.text-center
        a.btn.btn-primary-border(ng-show="joinedGroupPageNo > -1",ng-click="getJoinedGroups()")="Load more"
