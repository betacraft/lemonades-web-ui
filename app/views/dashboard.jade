div#createGroupModal.modal(name="createGroupModal",tabindex="-1",role="dialog",aria-labelledby="createGroupModalLabel",aria-hidden="true")
  div.modal-dialog
    div.modal-content
      div.modal-header
        button.close(type="button",data-dismiss="modal")
          span(aria-hidden="true")
          span.sr-only="Close"
        h4#createGroupModal.modal-title="Create Group"
      div.modal-body
        form(role="form",name="form",novalidate)
            div.form-group
              label(for="productLink")="Flipkart Product Link"
              input#productLink.form-control(type="uri",placeholder="Flipkart Product Link",ng-model="object.product_link",name="productLink",required)
      div.modal-footer
        button#createGroup.btn.btn-primary(type="button",data-loading-text="Fetching Info",ng-disabled="form.productLink.$error.required===true",ng-click="createGroup()")="Create"
section(ng-init="init()")
  div.container-fluid.bgGray(style="padding:10px;")
    div.row
      div.col-md-12
        div.col-md-2
          a(ng-click="landing()")
            img.img-responsive.text-center(src="images/innerPageLogo.png",width="160px;")
        div.col-md-8
          div.input-group
            input.heroInput.form-control(type="text",placeholder="Search for product")
            span.input-group-btn
              button.heroBTN.btn.btn-default(type="button")
                img(src="images/search.png",width="18px;")
        div.col-md-2.pull-right
          .btn.pinkBTN(ng-show="sessionKey",data-toggle="modal",data-target="#createGroupModal")="Create Group"
          a.btn.pinkBTN(ng-hide="sessionKey",ng-click="$root.goToLogin()")="Login To Buy"
section
  div.container(style="margin-top:30px;")
    div.row
      div.col-md-6
        p.colorDarkGray.rightPinkLine(style="font-size:30px;")="Trending Groups"
    div.row
      div.col-md-4(ng-repeat="group in groups",ng-click="goToGroup(group.id)")
        a.card
          div.productImageAndInfo.text-center
            div.Imageinfo
              div.width100p(style="margin-top:10px;")
                div.text-center.colorWhite(style="width:100%;font-size:22px;position:absolute;bottom:0;margin-bottom:5px;margin-left:5px;margin-right:5px;")="{{group.product.name | limitTo:50}}"
            div.imageBox(style="background-color:#FFFFFF;")
              div(style="width:100%;")
                img.image-center(src="{{group.product.product_image}}",style="max-height:300px;max-width:300px;")
        div.cardInfo
          div.JoinedThisGroup
            div.cardBigText="{{group.interested_users_count}}"
            div.cardSmallText="Joined"
          div.lowestPrice
            div.lowestPriceSmallText(ng-show="group.interested_users_count < 50")="{{50 - group.interested_users_count}} more for"
            div.lowestPriceSmallText(ng-show="group.interested_users_count >= 50")="It's up for"
            div.lowestPriceBigText="DEAL"
        div.finalPriceBtn
          p.colorWhite(style="font-size:20px;")="Rs. {{group.product.price_value}}"

hr(style="margin-top:100px;")
footer
    div.footerInside
      div.row
        div.col-md-2.col-md-offset-4.text-right
          ul.footerLinks
            li
              a="Privacy Policy"
              br
              a="Suggest Deal Type"
              br
              a="Join Our Vendor List"
        div.col-md-2.text-left
          ul.footerLinks
            li
              a="How It Works"
              br
              a="Contact Us"
              br
              a="FAQ"
  div.container
    div.row
      dov.col-md-12.text-center.copyrightTxt="(C) Lemonades LLC"
