div#createGroupModal.modal(name="createGroupModal",tabindex="-1",role="dialog",aria-labelledby="createGroupModalLabel",aria-hidden="true")
  div.modal-dialog
    div.modal-content
      div.modal-header
        button.close(type="button",data-dismiss="modal")
          span(aria-hidden="true")
          span.sr-only="Close"
        h4#createGroupModal.modal-title="Create/Search Group"
      div.modal-body
        div(ng-show="status !== undefined && status.success === false",style="margin-bottom:10px;")
          p.colorPink="{{status.message}}"

        form(role="form",name="form",novalidate)
            div.form-group
              label(for="productLink")="Flipkart/Amazon.in Product Link"
              input#productLink.form-control(type="uri",placeholder="Flipkart/Amazon.in Product Link",ng-model="object.product_link",name="productLink",required)
      div.modal-footer
        button#createGroup.btn.btn-primary-border(type="button",data-loading-text="Fetching Info",ng-disabled="form.productLink.$error.required===true",ng-click="createGroup()")="Go"
section(ng-init="init()")
  div.container-fluid.bgGray(style="padding:10px;")
    div.row
      div.col-md-12
        div.col-md-2
          a(ng-click="landing()")
            img.img-responsive.text-center(src="images/innerPageLogo.png",width="160px;")
        div.col-md-4.pull-right.col-md-offset-6.text-right
          .btn.btn-primary-border(ng-show="sessionKey",ng-click="myGroups()")="My Groups"
          .btn.btn-primary-border(ng-show="sessionKey",data-toggle="modal",data-target="#createGroupModal")="Create/Search Group"
          a.btn.btn-primary-border(ng-hide="sessionKey",ng-click="$root.goToLogin()")="Login To Buy"
          .btn.btn-primary-border(ng-show="sessionKey",ng-click="logout()")="Logout"
section
  div.container(style="margin-top:30px;")
    div.row
      div.col-md-6
        p.colorDarkGray.rightPinkLine(style="font-size:30px;")="Groups"
    div.row
      div.col-md-4(ng-repeat="group in groups",ng-click="goToGroup(group.id)")
        a.card
          div.productImageAndInfo.text-center
            div.Imageinfo
              div.width100p(style="margin-top:10px;")
                div.text-center.colorWhite(style="width:100%;font-size:22px;position:absolute;bottom:0;margin-bottom:5px;margin-left:5px;margin-right:5px;")="{{group.product.name | limitTo:50}}"
            div.imageBox(style="background-color:#FFFFFF;")
              div(style="width:100%;")
                img.image-center(src="{{group.product.product_image}}",style="max-height:300px;max-width:300px;")
        div.cardInfo
          div.JoinedThisGroup
            div.cardBigText="{{group.interested_users_count}}"
            div.cardSmallText="Joined"
          div.lowestPrice
            div.lowestPriceSmallText(ng-show="group.interested_users_count < group.required_user_count")="{{group.required_user_count - group.interested_users_count}} more for"
            div.lowestPriceSmallText(ng-show="group.interested_users_count >= group.required_user_count")="It's up for"
            div.lowestPriceBigText="DEAL"
        div.finalPriceBtn
          p.colorWhite(style="font-size:20px;")="{{group.product.price_value | currency:'Rs. '}}"
    div.row(style="margin-top:30px;")
      div.col-md-12.text-center
        a.btn.btn-primary-border(ng-show="pageNo > -1",ng-click="getGroups()")="Load more"
hr(style="margin-top:100px;")
