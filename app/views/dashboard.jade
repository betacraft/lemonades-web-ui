section(ng-init="init()",style="background:#FFFFFF;")
  div(style="position:absolute;top:60px;padding-top:10px;padding-bottom:10px;left:auto;right:auto;z-index:10;width:100%;background-color:#FFFFFF;")
    div.container()
      div.row
        div.col-md-6.col-md-offset-3(style="padding-top:3px;")
          input.form-control(type="text",placeholder="Search For Products",ng-model="searchTerm",ng-change="getGroupsForSearch()")
section(style="margin-top:100px;margin-bottom:20px;")
  div.container
    div.row
      group(ng-repeat="group in groups",group=group,infinite-scroll="getGroups()" infinite-scroll-distance="3")
