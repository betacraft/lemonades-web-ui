div#createGroupModal.modal(name="createGroupModal",tabindex="-2",role="dialog",aria-labelledby="createGroupModalLabel",aria-hidden="true",style="z-index:10000;")
  div.modal-dialog
    div.modal-content
      div.modal-header
        button.close(type="button",data-dismiss="modal")
          span(aria-hidden="true")
          span.sr-only="Close"
        h4#createGroupModal.modal-title="Create / Search Group"
      div.modal-body
        div(ng-show="status !== undefined && status.success === false",style="margin-bottom:10px;")
          p.colorPink="{{status.message}}"
        form(role="form",name="form",novalidate)
            div.form-group
              label(for="productLink")="Flipkart/Amazon.in Product Link"
              input#productLink.form-control(type="uri",placeholder="Flipkart/Amazon.in Product Link",ng-model="object.product_link",name="productLink",required)
        a.btn.btn-primary-border(ng-show="status !== undefined && status.success === false",style="margin-bottom:10px;",href="mailto:akshay@rainingclouds.com?subject=Unable to parse&body=I want to create a group for : {{object.product_link}}") Mail Us this link, we will try to fix this
      div.modal-footer
        button#createGroup.btn.btn-primary-border(type="button",data-loading-text="Fetching Info",ng-disabled="form.productLink.$error.required===true",ng-click="createGroup()")="Go"
section(ng-init="init()")
  div.container-fluid.bgGray(style="padding:10px;")
    div.row
      div.col-md-12
        div.col-md-2
          a(ng-click="landing()")
            img.img-responsive.text-center(src="images/innerPageLogo.png",width="160px;")
        div.col-md-6.pull-right.col-md-offset-4.text-right
          button.btn.btn-primary-border(ng-show="sessionKey",ng-click="myGroups()")="My Groups"
          button.btn.btn-primary-border(ng-show="sessionKey",data-toggle="modal",data-target="#createGroupModal")="Create / Search Group"
          button.btn.btn-primary-border(ng-hide="sessionKey",ng-click="$root.goToLogin()")="Login To Buy"
          button.btn.btn-primary-border(ng-show="sessionKey",ng-click="logout()")="Logout"
section
  div.container(style="margin-top:30px;")
    div.row
      div.col-md-6
        p.colorDarkGray.rightPinkLine(style="font-size:30px;")="Groups"
    div.row
      group(ng-repeat="group in groups",group=group)
    div.row(style="margin-top:30px;")
      div.col-md-12.text-center
        a.btn.btn-primary-border(ng-show="pageNo > -1 && group",ng-click="getGroups()")="Load more"
hr(style="margin-top:100px;")
footer
  div.container
    div.row
      dov.col-md-12.text-center.copyrightTxt="(C) Lemonades LLC"
