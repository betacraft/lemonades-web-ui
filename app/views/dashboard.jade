section(ng-init="init()",style="background:#FFFFFF;")
  div(style="position:absolute;top:60px;padding-top:10px;padding-bottom:10px;left:auto;right:auto;z-index:10;width:100%;background-color:#FFFFFF;")
    div.container()
      div.row
        div.col-md-6.col-md-offset-3(style="padding-top:3px;")
          div.input-group
            input.form-control(type="text",placeholder="Search For Products",ng-model="searchTerm",ng-change="getGroupsForSearch()")
            span.input-group-btn
              button.btn.btn-primary-gray(type="button",ng-click="clearSearchTerm()") Show All

section(style="margin-top:100px;margin-bottom:20px;",analytics-on="scrollby",analytics-event="scrolled-groups-dashboard-screen",analytics-category="groups",analytics-label="scrolled-groups-dashboard-screen")
  div.container
    div.row
      group(ng-repeat="group in groups",group=group,infinite-scroll="getGroups()" infinite-scroll-distance="3")
section(style="margin-top:100px;margin-bottom:20px;",ng-show="searchTerm !== '' && fetchingGroups!==true && (groups === null || groups.length===0)")
  div.container
    div.row
      div.col-md-12.text-center
        p(style="color:#424242;font-size:25px;font-weight:bold;")="We think its time to create a deal for you !!"
        p(ng-show="sessionKey",style="color:#424242;font-size:25px;font-weight:bold;") Just click
          button.btn.btn-primary(ng-show="sessionKey",style="font-size:18px;",ng-disabled="true") Create Group
          = " button on the top bar"
        button.btn.btn-lg.btn-primary(ng-hide="sessionKey",ng-click="login()",style="margin-top:20px;",analytics-on="click",analytics-event="login-to-create-group-dashboard-page",analytics-label="login-to-create-group-dashboard-page",analytics-category="users") Login To Create Deal
section(style="margin-top:100px;margin-bottom:20px;",ng-show="fetchingGroups")
  div.container
    div.row
      div.col-md-4.col-md-offset-4
        .progress.progress-striped.active
          .progress-bar(role='progressbar', aria-valuenow='100', aria-valuemin='0', aria-valuemax='100', style='width: 100%')

