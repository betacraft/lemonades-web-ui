div.container-fluid(style="padding-top:20px;padding-bottom:50px;")
  div.container
    div.col-md-4.col-sm-4.col-sm-offset-4.col-md-offset-4
      a(href="/")
        img(src="images/glass.png",height="80px",style="display:block;margin-top:30px;margin-left:auto;margin-right:auto;")
      h2.text-center(style="color:#E8277A")="Register"
      hr
      div.panel(ng-show="status !== undefined && status.success !== true")
        div.panel-body.text-center
          p {{status.message}}
      form#signUpForm(role="form",name="form",style="margin-top:20px;")
        div.form-group
          label(for="email")="Email"
          input#email.form-control(type="text",style="font-size:16px;",name="email",placeholder="Email")
        div.form-group
          label(for="password")="Password"
          input#password.form-control(type="password",style="font-size:16px;",name="password",placeholder="Password")
        div.form-group
          label(for="confirmPassword")="Confirm Password"
          input#password.form-control(type="password",style="font-size:16px;",name="confirm_password",placeholder="Confirm Password")
        div.form-group
          label(for="mobileNumber")="Mobile Number"
          input#password.form-control(type="text",style="font-size:16px;",name="mobile_number",placeholder="Mobile Number")
        div.text-center(style="margin-top:10px;")
          button.btn.btn-primary-border#signUpButton(type="submit",onclick="",ng-click="register()",data-loading-text="Registering...")="Register"
