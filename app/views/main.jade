div.container-fluid-full(ng-init="init()")
  div.container(style="margin-top:60px;padding-bottom:20px;")
    div.row.text-center
      div.col-md-12(style="margin-top:30px;")
        p(style="color:#424242;font-size:45px;font-weight:bold;")="The Next Generation Of Group Buying"
      div.row.text-center.marginTop50px(style="margin-right:10px;margin-left:10px;")
        div.col-md-12(style="margin-top:30px;")
          img.img-responsive(src="images/gra.png")
        div.col-md-12(style="margin-top:30px;")
          p(style="color:#e8277a;font-size:25px;font-weight:bold;")="Spot your product, Join Group and Get Huge Group Discounts"
  hr
  section(ng-show="groups.length > 0")
    div.container(style="margin-top:20px;")
      div.row
        div.col-md-6
          p.colorDarkGray.rightPinkLine(style="font-size:30px;")="Trending Groups"
      div.row
        group(ng-repeat="group in groups",group=group)
    div.row(style="margin-top:30px;")
      div.col-md-12.text-center
        a.btn.btn-lg.btn-primary-border(ng-click="dashboard()")="View More Groups"
footer
  div.container-fluid.bgGray(style="margin-top:20px;padding-top:20px;padding-bottom:20px;")
    div.row
      div.col-md-12.text-center
        a.btn.btn-primary-border-black(href="https://www.facebook.com/groupup.in",target="_blank") Like Us
        a.btn.btn-primary-border-black(href="https://twitter.com/letsgroupup",target="_blank",style="margin-left:5px;") Follow Us
        a.btn.btn-primary-border-black(style="margin-left:5px;") How It Works
      div.col-md-12.text-center(style="margin-top:20px;")
        a(style="color:#000000;",ng-click="privacy()") Privacy Policy
        span=" | "
        a(style="color:#000000;",ng-click="termsOfService()") Terms Of Service
      div.col-md-12.text-center(style="margin-top:5px;")
        p Copyrights GroupUP
